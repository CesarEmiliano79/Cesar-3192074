<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Taller de Llaveros - Pedidos</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Lista de Pedidos</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>ID Pedido</th>
                <th>Código</th>
                <th>Modelo</th>
                <th>Precio Total</th>
                <th>¿Completado?</th>
                <th>Cliente</th>
                <th>Fecha Entrega</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% datos.forEach(datos => { %>
            <tr>
                <td><%= datos.id %></td>
                <td><%= datos.idPedido %></td>
                <td><%= datos.codigo %></td>
                <td><%= datos.modelo %></td>
                <td>$<%= datos.precioT %></td>
                <td><%= datos.completo ? 'Sí' : 'No' %></td>
                <td><%= datos.cliente %></td>
                <td><%= datos.fechaEntrega %></td>
                <td>
                    <a href="/find/<%= datos.id %>">Editar</a> |
                    <a href="/delete/<%= datos.id %>" onclick="return confirm('¿Estás seguro de eliminar este pedido?')">Eliminar</a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <h2>Agregar Nuevo Pedido</h2>
    <a href="/registro">Agregar Pedido</a>
    </form>
</body>
</html>
